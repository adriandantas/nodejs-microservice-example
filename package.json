{
  "name": "nodejs-microservice-example",
  "version": "1.0.0",
  "description": "A NodeJS microservice project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=coverage --coverageReporters=lcov,text --reporters=jest-html-reporter --testResultsProcessor=jest-junit --collectCoverageFrom=src/**/*.{js,jsx}",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^6.0.1",
    "joi": "^17.7.1",
    "mongoose": "^5.10.7",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.4",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "mongodb-memory-server": "^8.11.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.2.1"
  },
  "keywords": [
    "film",
    "microservice",
    "REST API"
  ],
  "author": {
    "name": "Adrian Dantas",
    "email": "adrian.dantas@gmail.com"
  }
}
